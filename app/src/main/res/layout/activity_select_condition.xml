<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SelectConditionActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/condizioni_radio_group"
        android:layout_alignStart="@id/condizioni_radio_group"
        android:layout_marginBottom="40dp"
        android:text="Seleziona la condizione del libro"
        android:textSize="20dp" />

    <RadioGroup
        android:id="@+id/condizioni_radio_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/come_nuovo_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:text="Libro come nuovo"
            android:textSize="18dp" />

        <RadioButton
            android:id="@+id/buone_condizioni_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:text="Libro usato ma in buone condizioni"
            android:textSize="18dp" />

        <RadioButton
            android:id="@+id/discrete_condizioni_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:text="Libro usato ma in discrete condizioni"
            android:textSize="18dp" />
    </RadioGroup>

    <Button
        android:id="@+id/continua_button"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_below="@id/condizioni_radio_group"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:letterSpacing="0"
        android:text="Continua"
        android:textAllCaps="false"
        android:textSize="24dp"
        android:visibility="gone" />
</RelativeLayout>