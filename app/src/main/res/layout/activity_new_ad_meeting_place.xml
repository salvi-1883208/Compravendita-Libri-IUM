<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.NewAdMeetingPlaceActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/sapienza_map_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-100dp"
        android:text="Selezionare punto d'incontro"
        android:textSize="25dp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/sapienza_map_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/sapienza_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/sapienza_map_image" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="67dp"
                android:layout_marginTop="193dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/darwin_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/darkGrey"
                    android:padding="5dp"
                    android:text="Edificio C. Darwin"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:visibility="invisible" />

                <ImageButton
                    android:id="@+id/darwin_button"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/meeting_place_icon" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="180dp"
                android:layout_marginTop="249dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/fermi_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/darkGrey"
                    android:padding="5dp"
                    android:text="Edificio Enrico Fermi"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:visibility="invisible" />

                <ImageButton
                    android:id="@+id/fermi_button"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/meeting_place_icon" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="80dp"
                android:layout_marginTop="302dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/minerva_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/darkGrey"
                    android:padding="5dp"
                    android:text="Piazzale della Minerva"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:visibility="invisible" />

                <ImageButton
                    android:id="@+id/minerva_button"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/meeting_place_icon" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/meeting_place_continua_button"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_below="@id/sapienza_map_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-120dp"
        android:letterSpacing="0"
        android:text="Continua"
        android:textAllCaps="false"
        android:textSize="24dp"
        android:visibility="visible" />

</RelativeLayout>