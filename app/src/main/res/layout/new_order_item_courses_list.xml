<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/new_order_course_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:text="Course name"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/new_order_suggested_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/new_order_course_title"
            android:layout_alignStart="@id/new_order_course_title"
            android:layout_marginTop="-7dp"
            android:layout_marginBottom="12dp"
            android:lineSpacingExtra="3dp"
            android:text="99 libri suggeriti"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/view_acquista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/new_order_suggested_number"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="15dp"
            android:background="@color/sapienza"
            android:fontFamily="sans-serif-medium"
            android:paddingHorizontal="6dp"
            android:paddingVertical="3dp"
            android:text="ACQUISTA"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/view_non_disponibile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/new_order_suggested_number"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="15dp"
            android:background="@color/lightGray"
            android:fontFamily="sans-serif-medium"
            android:paddingHorizontal="6dp"
            android:paddingVertical="3dp"
            android:text="Non Disponibile"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:visibility="gone" />

    </RelativeLayout>
</LinearLayout>