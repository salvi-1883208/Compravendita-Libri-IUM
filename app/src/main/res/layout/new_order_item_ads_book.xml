<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/new_order_book_seller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:text="Matteo Matti"
            android:textSize="20dp"
            android:textStyle="bold" />

        <RatingBar
            android:id="@+id/new_order_rating_bar"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/new_order_book_seller"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="10dp"
            android:numStars="5"
            android:rating="4"
            android:scaleX="1.5"
            android:scaleY="1.5"
            android:transformPivotX="0dp"
            android:transformPivotY="0dp" />

        <TextView
            android:id="@+id/new_order_book_condition_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/new_order_book_seller"
            android:layout_alignStart="@id/new_order_book_seller"
            android:layout_marginTop="-7dp"
            android:layout_marginBottom="12dp"
            android:lineSpacingExtra="3dp"
            android:text="Libro usato ma in buone condizioni\nSottolineato a matita o penna\nPrezzo: 99â‚¬"
            android:textSize="18dp" />


    </RelativeLayout>
</LinearLayout>