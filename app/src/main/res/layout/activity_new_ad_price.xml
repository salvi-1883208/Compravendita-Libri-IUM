<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.NewAdPriceActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/new_ad_price_input"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="150dp"
        android:text="Inserire il prezzo di vendita"
        android:textSize="25dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/new_ad_price_input"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:hint="0.00"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:textSize="18dp"
        android:tooltipText="€" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/new_ad_price_input"
        android:text="€"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/set_price_continua_button"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_below="@id/new_ad_price_input"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        android:letterSpacing="0"
        android:text="Continua"
        android:textAllCaps="false"
        android:textSize="24dp"
        android:visibility="gone" />

</RelativeLayout>