<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.NewAdPhotosActivity">

    <ImageView
        android:id="@+id/imageViewTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/recycler_photos"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="90dp"
        android:text="Aggiungi Foto"
        android:textSize="25sp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_photos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <Button
        android:id="@+id/add_photo_continua_button"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_below="@id/recycler_photos"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:letterSpacing="0"
        android:text="Continua"
        android:textAllCaps="false"
        android:textSize="24dp"
        android:visibility="gone" />

</RelativeLayout>